{
  "name": "hive",
  "type": "module",
  "workspaces": {
    "packages": ["apps/*"],
    "catalog": {
      "@antfu/eslint-config": "^6.6.1",
      "@types/bun": "^1.3.4",
      "@typescript/native-preview": "^7.0.0-dev.20251213.1",
      "eslint": "^9.39.2"
    }
  },
  "scripts": {
    "dev": "bun --workspaces dev",
    "prod": "bun --workspaces prod",
    "build:dev": "bun --workspaces build:dev",
    "build:prod": "bun --workspaces build:prod",
    "lint": "bun --workspaces lint",
    "lint:css": "bun --filter \"./apps/frontend\" lint:css",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "^1.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": ["bun --workspaces lint --fix"],
    "*.css": ["bun --filter \"./apps/frontend\" lint:css --fix"]
  }
}
