{
  "name": "hive-backend",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun --watch ./src/app/entrypoint.ts",
    "prod": "NODE_ENV=production bun ./dist/index.js",
    "build:dev": "bun --bun tsgo -b && NODE_ENV=development bun ./scripts/build.script.ts",
    "build:prod": "NODE_ENV=production bun ./scripts/build.script.ts",
    "build:client": "bun --bun tsgo -p ./tsconfig.build.json",
    "lint": "bun --bun eslint .",
    "db:studio": "bun --bun drizzle-kit studio",
    "db:push": "bun --bun drizzle-kit push",
    "db:generate": "bun --bun drizzle-kit generate",
    "db:regenerate": "bun ./scripts/db.regenerate.script.ts",
    "test:integration": "bun test ./tests/integration --preload ./tests/global.setup.ts --preload ./tests/integration/integration.setup.ts",
    "test:unit": "bun test ./tests/unit --preload ./tests/global.setup.ts",
    "test": "bun run test:integration && bun run test:unit"
  },
  "dependencies": {
    "@hono/oauth-providers": "^0.8.5",
    "@hono/standard-validator": "^0.2.1",
    "@scalar/hono-api-reference": "^0.9.30",
    "croner": "^9.1.0",
    "drizzle-orm": "^1.0.0-beta.8",
    "hono": "4.11.0",
    "hono-openapi": "^1.1.2",
    "nodemailer": "^7.0.12",
    "pino": "^10.1.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@standard-schema/spec": "^1.1.0",
    "@types/bun": "catalog:",
    "@types/nodemailer": "^7.0.4",
    "@typescript/native-preview": "catalog:",
    "drizzle-kit": "^1.0.0-beta.8",
    "eslint": "^9.39.2",
    "pino-pretty": "^13.1.3"
  }
}
