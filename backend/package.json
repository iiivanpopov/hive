{
  "name": "hive-backend",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/app/public.d.ts",
      "import": "./dist/app/public.js"
    }
  },
  "main": "./dist/app/public.js",
  "types": "./dist/app/public.d.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun --hot ./src/app/entrypoint.ts",
    "prod": "NODE_ENV=production bun ./dist/index.js",
    "build:dev": "bun --bun tsgo -b && NODE_ENV=development bun build.script.ts",
    "build:prod": "NODE_ENV=production bun build.script.ts",
    "build:client": "bun --bun tsgo -p ./tsconfig.build.json",
    "lint": "bun --bun eslint .",
    "db:studio": "bun --bun drizzle-kit studio",
    "db:push": "bun --bun drizzle-kit push",
    "db:generate": "bun --bun drizzle-kit generate"
  },
  "dependencies": {
    "@hono/oauth-providers": "^0.8.5",
    "@hono/standard-validator": "^0.2.1",
    "@scalar/hono-api-reference": "^0.9.30",
    "drizzle-orm": "^1.0.0-beta.3-d4ff358",
    "hono": "4.11.0",
    "hono-openapi": "^1.1.2",
    "nodemailer": "^7.0.11",
    "pino": "^10.1.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@standard-schema/spec": "^1.1.0",
    "@types/bun": "^1.3.5",
    "@types/nodemailer": "^7.0.4",
    "@typescript/native-preview": "catalog:",
    "drizzle-kit": "^1.0.0-beta.3-d4ff358",
    "eslint": "^9.39.2",
    "pino-pretty": "^13.1.3"
  }
}
