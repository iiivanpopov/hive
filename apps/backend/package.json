  },
  "devDependencies": {
    "@scalar/hono-api-reference": "^0.9.28",
    "@standard-schema/spec": "^1.0.0",
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:",
    "drizzle-kit": "^1.0.0-beta.2-58a4521",
    "eslint": "catalog:",
    "hive-shared": "workspace:*",
    "hono-openapi": "^1.1.2",
    "pino-pretty": "^13.1.3"
  }
